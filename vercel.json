{
  "cleanUrls": true,
  "trailingSlash": false,

  "redirects": [
    {
      "source": "/index.html",
      "destination": "/",
      "permanent": true
    }
  ],

  "rewrites": [
    { "source": "/careers", "destination": "/careers.html" },
    { "source": "/MTLabs", "destination": "/MTLabs.html" },
    { "source": "/pitch", "destination": "/pitch.html" },
    { "source": "/screening", "destination": "/screening.html" },
    { "source": "/trustcenter", "destination": "/trustcenter.html" },
    { "source": "/whitepaper", "destination": "/whitepaper.html" }
  ],

  "errorPages": {
    "404": "/404.html"
  },

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],

  "build": {
    "env": {
      "NEXT_PUBLIC_API_URL": "https://api.example.com"
    }
  }
}
